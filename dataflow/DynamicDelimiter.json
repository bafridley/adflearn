{
	"name": "DynamicDelimiter",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DelimitedInputSurce",
						"type": "DatasetReference"
					},
					"name": "SourceData"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "Delimiter"
				},
				{
					"name": "HeaderRow"
				},
				{
					"name": "SourceWithRowNum"
				}
			],
			"scriptLines": [
				"source(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> SourceData",
				"HeaderRow derive(column1 = ERROR_FUNCTION('')) ~> Delimiter",
				"SourceWithRowNum filter(RowNum==1) ~> HeaderRow",
				"SourceData keyGenerate(output(RowNum as long),",
				"     startAt: 1L,",
				"     stepValue: 1L) ~> SourceWithRowNum"
			]
		}
	}
}