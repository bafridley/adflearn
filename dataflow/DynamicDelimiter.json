{
	"name": "DynamicDelimiter",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DelimitedInputSurce",
						"type": "DatasetReference"
					},
					"name": "SourceData"
				}
			],
			"sinks": [
				{
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "HeaderRow"
				},
				{
					"name": "SourceWithRowNum"
				},
				{
					"name": "RowWithDelimiter"
				}
			],
			"scriptLines": [
				"source(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> SourceData",
				"SourceWithRowNum filter(RowNum==1) ~> HeaderRow",
				"SourceData keyGenerate(output(RowNum as long),",
				"     startAt: 1L,",
				"     stepValue: 1L) ~> SourceWithRowNum",
				"HeaderRow derive(Delimiter = 'Delimiter:'+toString(regexExtract(RowData,'([,|])',1))) ~> RowWithDelimiter",
				"RowWithDelimiter sink(validateSchema: false,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     store: 'cache',",
				"     format: 'inline',",
				"     output: false,",
				"     saveOrder: 1) ~> sink1"
			]
		}
	}
}