{
	"name": "DynamicDelimiter",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DelimitedInputSurce",
						"type": "DatasetReference"
					},
					"name": "SourceData"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "HeaderRow"
				},
				{
					"name": "SourceWithRowNum"
				},
				{
					"name": "RowWithDelimiter"
				}
			],
			"scriptLines": [
				"source(output(",
				"          RowData as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> SourceData",
				"SourceWithRowNum filter(RowNum==1) ~> HeaderRow",
				"SourceData keyGenerate(output(RowNum as long),",
				"     startAt: 1L,",
				"     stepValue: 1L) ~> SourceWithRowNum",
				"HeaderRow derive(Delimiter = 'Delimiter:,'+toString(regexExtract(RowData,'([!$`~%^,|\\t])',1))) ~> RowWithDelimiter"
			]
		}
	}
}